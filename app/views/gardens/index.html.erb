<div class="container">
  <div class="row">
    <% @gardens.each do |garden| %>
      <div class="col-md-4">
        <%= link_to garden_path(garden) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= garden.photo_url %>);">
            <div class="card-category"><%= garden.location %></div>
            <div class="card-description">
              <h2><%= garden.name %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
